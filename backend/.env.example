# Database
DATABASE_URL=postgresql+asyncpg://panel:panel@localhost:5432/panel
# DATABASE_URL=sqlite+aiosqlite:///./panel.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# API
API_V1_PREFIX=/api/v1
DOCS_ENABLED=true

# Subscription
# IMPORTANT: Use PANEL DOMAIN, not node IP!
# Subscription links: https://YOUR-DOMAIN/sub/{token}
# Protocols inside: can use domain or node IP (domain recommended)
XRAY_SUBSCRIPTION_URL_PREFIX=https://panel.example.com/sub
SUBSCRIPTION_CACHE_TTL=300

# HWID Device Limit
HWID_DEVICE_LIMIT_ENABLED=true
HWID_FALLBACK_DEVICE_LIMIT=3
HWID_MAX_DEVICES_ANNOUNCE=5

# Webhooks
WEBHOOK_SECRET_HEADER=your-webhook-secret-key
WEBHOOK_MAX_RETRIES=3
JOB_SEND_NOTIFICATIONS_INTERVAL=30

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_IDS=[]

# Xray
XRAY_EXECUTABLE_PATH=/usr/local/bin/xray
XRAY_ASSETS_PATH=/usr/local/share/xray

# Default domain for TLS certificates and templates
# Change this to your actual domain
DEFAULT_DOMAIN=example.com

# Workers
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
